<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.manuel.batteryadvisor.Menu"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/frameLayout">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="223dp"
            android:layout_height="274dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo3"
            />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/menu"
        android:textAlignment="center"
        android:layout_below="@+id/frameLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/comienzo"
            android:id="@+id/begin"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:background="@drawable/button_custom" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/parar"
            android:layout_below="@+id/play"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/stop"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:background="@drawable/button_custom" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/estadisticas"
            android:layout_below="@+id/play"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/estadisticas"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:background="@drawable/button_custom" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/version"
            android:id="@+id/version"
            android:layout_gravity="end"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/versionstring"
            android:id="@+id/versionstring"
            android:layout_gravity="start|top"
            android:textColor="#FFFFFF" />
    </FrameLayout>
</RelativeLayout>
